<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <style name="Base.Theme.Sycrom" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="colorPrimary">@color/violet_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/slate_600</item>

        <item name="android:colorBackground">@color/slate_50</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/slate_900</item>

        <item name="elevationOverlayEnabled">false</item>

        <item name="colorOnSurfaceVariant">@color/slate_600</item>
        <item name="colorOutline">@color/slate_200</item>

        <item name="popupMenuStyle">@style/MyPopupMenuStyle</item>
        <item name="android:popupMenuStyle">@style/MyPopupMenuStyle</item>
    </style>

    <style name="Theme.Sycrom" parent="Base.Theme.Sycrom" />

    <style name="MyPopupMenuStyle" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>


    <style name="CalendarWeekDayLegend">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOutline</item>
        <item name="fontFamily">@font/nunitobold</item>
        <item name="android:textAllCaps">true</item>
    </style>




    <style name="SynkronDatePicker" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/Synkron.DatePicker.Button.Confirm</item>
        <item name="buttonBarNegativeButtonStyle">@style/Synkron.DatePicker.Button.Cancel</item>
    </style>

    <style name="SynkronTimePicker" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="buttonBarPositiveButtonStyle">@style/Synkron.Button.Confirm</item>
        <item name="buttonBarNegativeButtonStyle">@style/Synkron.Button.Cancel</item>
    </style>

    <style name="Synkron.Button.Confirm" parent="Widget.Material3.Button">
        <item name="backgroundTint">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Synkron.Button.Cancel" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@android:color/black</item>
        <item name="rippleColor">#33000000</item>
    </style>

    <style name="Synkron.DatePicker.Button.Confirm" parent="Widget.Material3.Button">
        <item name="backgroundTint">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Synkron.DatePicker.Button.Cancel" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@android:color/black</item>
        <item name="rippleColor">#33000000</item> </style>


    <style name="CalendarDayLegend">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">@font/nunitosemibold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="rounde">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>



    <style name="CalendarDay">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyLarge</item>
    </style>

    <style name="CalendarDaySelected" parent="CalendarDay">
        <item name="android:background">@drawable/bg_selected_day</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

        <style name="Widget.App.Chip.Priority" parent="Widget.Material3.Chip.Filter">
            <item name="android:textColor">@color/priority_high_text</item>
            <item name="chipBackgroundColor">@color/priority_high_bg</item>
            <item name="chipStrokeWidth">0dp</item> </style>

        <style name="Widget.App.Chip.Priority.Alta">
            <item name="android:textColor">@color/priority_high_text</item>
            <item name="chipBackgroundColor">@color/priority_high_bg</item>
        </style>

        <style name="Widget.App.Chip.Priority.Media">
            <item name="android:textColor">@color/priority_medium_text</item>
            <item name="chipBackgroundColor">@color/priority_medium_bg</item>
        </style>

        <style name="Widget.App.Chip.Priority.Baja">
            <item name="android:textColor">@color/priority_low_text</item>
            <item name="chipBackgroundColor">@color/priority_low_bg</item>
        </style>


</resources>