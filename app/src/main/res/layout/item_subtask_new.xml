<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ivory"
    android:layout_marginVertical="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Icono para arrastrar (Drag Handle) -->
        <ImageView
            android:id="@+id/ivDragHandle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:contentDescription="Arrastrar para reordenar"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_drag_handle" /> <!-- Necesitarás este icono -->

        <TextView
            android:id="@+id/tvSubtaskText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Texto de la subtarea"
            android:textAppearance="?attr/textAppearanceBodyLarge" />

        <!-- Botón para eliminar -->
        <ImageButton
            android:id="@+id/ibRemoveSubtask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:contentDescription="Eliminar subtarea"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_close" /> <!-- Necesitarás este icono -->

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>