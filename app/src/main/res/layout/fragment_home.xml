<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/lyHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:elevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clHeaderContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/textGreeting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/nunitoextrabold"
                android:textColor="?attr/colorOnSurface"
                android:textSize="28sp"
                app:layout_constraintEnd_toStartOf="@+id/lyWeatherActions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Hola, Manuel" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/nunitosemibold"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/textGreeting"
                app:layout_constraintTop_toBottomOf="@id/textGreeting"
                tools:text="12 de mayo de 2025" />

            <LinearLayout
                android:id="@+id/lyWeatherActions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/textDate"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textGreeting">

                <LinearLayout
                    android:id="@+id/lyWeatherWidget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_tag_background_small"
                    android:backgroundTint="?attr/colorSurfaceContainerHigh"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp">

                    <ImageView
                        android:id="@+id/iconWeather"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="Clima"
                        android:src="@drawable/ic_sol" />

                    <TextView
                        android:id="@+id/textTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/nunitobold"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp"
                        tools:text="17°C" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSettings"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="4dp"
                    android:contentDescription="Ajustes"
                    app:icon="@drawable/ic_more_vert"
                    app:iconTint="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/dividerHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:dividerColor="?attr/colorOutline"
                app:layout_constraintTop_toBottomOf="@+id/textDate" />

            <LinearLayout
                android:id="@+id/lyCalendarContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/dividerHeader">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMonthYear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nunitobold"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="20sp"
                        tools:text="Diciembre 2025" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnToday"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunitobold"
                        android:minHeight="40dp"
                        android:text="Hoy"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        app:backgroundTint="?attr/colorSecondaryContainer" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/CalendarDayLegend"
                        android:text="Lun" />

                    <TextView
                        style="@style/CalendarDayLegend"
                        android:text="Mar" />

                    <TextView
                        style="@style/CalendarDayLegend"
                        android:text="Mie" />

                    <TextView
                        style="@style/CalendarDayLegend"
                        android:text="Jue" />

                    <TextView
                        style="@style/CalendarDayLegend"
                        android:text="Vie" />

                    <TextView
                        style="@style/CalendarDayLegend"
                        android:text="Sab" />

                    <TextView
                        style="@style/CalendarDayLegend"
                        android:text="Dom" />
                </LinearLayout>

                <com.kizitonwose.calendar.view.WeekCalendarView
                    android:id="@+id/weekCalendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cv_dayViewResource="@layout/item_calendar_day_new" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lyHeader">

        <LinearLayout
            android:id="@+id/ly_body_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/nunitobold"
                    android:paddingHorizontal="24dp"
                    android:text="Tareas programadas"
                    android:textColor="#1F2937"
                    android:textSize="20sp" />

                <com.google.android.material.loadingindicator.LoadingIndicator
                    android:id="@+id/progress_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:visibility="gone"
                    app:indicatorSize="40dp" />

                <LinearLayout
                    android:id="@+id/ivNoTasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:src="@drawable/synkrom_sintareas" />

                    <TextView
                        android:id="@+id/tvNoTasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nunitosemibold"
                        android:gravity="center"
                        android:text="¡Todo despejado! Disfruta tu día."
                        android:textColor="#6B7280"
                        android:textSize="16sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewTasks"
                    android:layout_width="match_parent"
                    android:clipChildren="false"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingStart="40dp"
                    android:paddingEnd="40dp"
                    android:visibility="gone"
                    android:layoutAnimation="@anim/layout_animation_fall_down"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_task_today" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayoutDots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toBottomOf="@id/recyclerViewTasks"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:tabBackground="@null"
                    app:tabIndicatorHeight="0dp"
                    app:tabPaddingStart="0dp"
                    app:tabPaddingEnd="0dp"
                    app:tabPaddingTop="0dp"
                    app:tabPaddingBottom="0dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <View
        android:id="@+id/bg_fab_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/tvFabAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?attr/colorPrimary"
        android:fontFamily="@font/nunitobold"
        android:text="Tarea"
        android:textColor="@color/white"
        android:visibility="gone"
        app:icon="@drawable/ic_edit"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/fabMain"
        app:layout_constraintEnd_toEndOf="@+id/fabMain" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/tvFabAddSuggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#8B5CF6"
        android:fontFamily="@font/nunitobold"
        android:text="Tarea IA"
        android:textColor="@color/white"
        android:visibility="gone"
        app:icon="@drawable/ic_suggestion"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/tvFabAddTask"
        app:layout_constraintEnd_toEndOf="@+id/tvFabAddTask" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/tvFabAddGasto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/nunitobold"
        android:text="Gasto"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tvFabAddIng"
        app:layout_constraintEnd_toEndOf="@+id/tvFabAddIng" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/tvFabAddIng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/nunitobold"
        android:text="Ingreso"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tvFabAddSuggestion"
        app:layout_constraintEnd_toEndOf="@+id/tvFabAddSuggestion" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="?attr/colorPrimary"
        android:fontFamily="@font/nunitobold"
        android:text="Añadir"
        android:textColor="@color/white"
        app:icon="@drawable/ic_plus"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>