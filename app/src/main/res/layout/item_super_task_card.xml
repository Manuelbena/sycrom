<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/task_card_width"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/spacing_xs"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/color_card"
    app:strokeWidth="@dimen/card_stroke_width"
    app:strokeColor="@color/border"
    app:cardCornerRadius="@dimen/card_corner_radius_lg"
    android:clipToPadding="false"
    app:cardElevation="@dimen/card_elevation_default">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viewTopStrip"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@drawable/bg_healt_gradient"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/viewTopStrip">

            <View
                android:id="@+id/viewIconBg"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_healt_gradient"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivMainIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_health"
                app:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/viewIconBg"
                app:layout_constraintEnd_toEndOf="@id/viewIconBg"
                app:layout_constraintStart_toStartOf="@id/viewIconBg"
                app:layout_constraintTop_toTopOf="@id/viewIconBg" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/sw_task_completed"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                app:buttonTint="#FF5722"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvTitle"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/nunitoextrabold"
                android:text="Rutina de pecho intensa"
                android:textColor="@color/md_theme_onSurface"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintEnd_toStartOf="@+id/sw_task_completed"
                app:layout_constraintStart_toEndOf="@id/viewIconBg"
                app:layout_constraintTop_toTopOf="@id/viewIconBg" />

            <TextView
                android:id="@+id/tvProgressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/nunitregular"
                android:text="2/4 completados"
                android:textColor="#6B7280"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/tvTitle"
                app:layout_constraintTop_toBottomOf="@id/tvTitle" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:progress="50"
                app:indicatorColor="#FF5722"
                app:trackColor="#F3F4F6"
                app:trackCornerRadius="4dp"
                app:trackThickness="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewIconBg" />

            <LinearLayout
                android:id="@+id/lySubTasksContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/progressBar" />

            <TextView
                android:id="@+id/btnViewAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_healt_gradient"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:fontFamily="@font/nunitosemibold"
                android:text="Ver todos (4) >"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/lySubTasksContainer"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>