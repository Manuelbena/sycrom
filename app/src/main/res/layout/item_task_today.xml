<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_task_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/spacing_xs"
    app:cardBackgroundColor="@color/color_card"
    app:strokeWidth="@dimen/card_stroke_width"
    app:strokeColor="@color/border"
    app:cardCornerRadius="@dimen/card_corner_radius_lg"
    app:cardElevation="@dimen/card_elevation_default">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingVertical="@dimen/spacing_l"
        android:paddingHorizontal="@dimen/spacing_l">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/sw_task_completed"
            android:layout_width="@dimen/icon_size_lg"
            android:layout_height="@dimen/icon_size_lg"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvEventTitle"
            app:layout_constraintBottom_toBottomOf="@+id/tvEventTitle"/>

        <TextView
            android:id="@+id/tvEventTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_m"
            android:layout_marginEnd="@dimen/spacing_xxs"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="@dimen/text_size_h2"
            android:textStyle="bold"
            android:fontFamily="@font/nunitobold"
            tools:text="@string/task_placeholder_title"
            app:layout_constraintEnd_toStartOf="@+id/btnTaskOptions"
            app:layout_constraintStart_toEndOf="@id/sw_task_completed"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnTaskOptions"
            android:layout_width="@dimen/icon_size_lg"
            android:layout_height="@dimen/icon_size_lg"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert"
            app:tint="@color/md_theme_onSurface"
            android:contentDescription="@string/cd_task_options"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvEventTitle"
            app:layout_constraintBottom_toBottomOf="@+id/tvEventTitle"/>

        <LinearLayout
            android:id="@+id/lyMetadatos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xxs"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvEventTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvEventTitle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/ivRepeat"
                    android:layout_width="@dimen/icon_size_info"
                    android:layout_height="@dimen/icon_size_info"
                    android:src="@drawable/ic_time_restart"
                    app:tint="@color/color_primary"
                    android:contentDescription="@string/cd_repeat_icon"/>
                <TextView
                    android:id="@+id/tvFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_xxs"
                    tools:text="@string/task_placeholder_frequency"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/color_primary"
                    android:textSize="@dimen/text_size_xs" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_m"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/ivAlert"
                    android:layout_width="@dimen/icon_size_info"
                    android:layout_height="@dimen/icon_size_info"
                    android:src="@drawable/ic_notifications"
                    app:tint="@color/color_camp"
                    android:contentDescription="@string/cd_alert_icon"/>
                <TextView
                    android:id="@+id/tvAlertCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_xxs"
                    tools:text="@string/task_placeholder_alert_count"
                    android:fontFamily="@font/nunito"
                    android:textColor="@color/color_camp"
                    android:textSize="@dimen/text_size_xs" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_m"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_size_xs"
                android:fontFamily="@font/nunito"
                tools:text="@string/task_placeholder_duration" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_s"
            tools:text="@string/task_placeholder_desc"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_size_sm"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="@font/nunito"
            app:layout_constraintStart_toStartOf="@+id/tvEventTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lyMetadatos"/>

        <ImageView
            android:id="@+id/icon_time"
            android:layout_width="@dimen/icon_size_sm"
            android:layout_height="@dimen/icon_size_sm"
            android:layout_marginTop="@dimen/spacing_m"
            android:src="@drawable/ic_clock"
            app:tint="@color/secondary_text"
            android:contentDescription="@string/cd_time_icon"
            app:layout_goneMarginTop="@dimen/spacing_s"
            app:layout_constraintStart_toStartOf="@+id/tvEventTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

        <TextView
            android:id="@+id/tvEventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_s"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_size_time"
            android:fontFamily="@font/nunitosemibold"
            app:layout_constraintBottom_toBottomOf="@+id/icon_time"
            app:layout_constraintStart_toEndOf="@+id/icon_time"
            app:layout_constraintTop_toTopOf="@+id/icon_time"
            tools:text="@string/task_placeholder_time" />

        <LinearLayout
            android:id="@+id/lySubtasksHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_s"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/spacing_xxs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/icon_time"
            app:layout_constraintTop_toBottomOf="@+id/icon_time">

            <ImageView
                android:id="@+id/ivChevron"
                android:layout_width="@dimen/icon_size_small"
                android:layout_height="@dimen/icon_size_small"
                android:rotation="-90"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/secondary_text"
                android:contentDescription="@string/cd_subtasks_chevron"/>

            <TextView
                android:id="@+id/textView_taskDetail_progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_s"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_size_time"
                android:textStyle="bold"
                android:fontFamily="@font/nunitobold"
                tools:text="@string/task_placeholder_subtasks" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSubtasksContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xxs"
            android:orientation="vertical"
            android:paddingStart="@dimen/spacing_xxl"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/lySubtasksHeader"
            app:layout_constraintTop_toBottomOf="@+id/lySubtasksHeader">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSubtasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                tools:itemCount="3"
                tools:listitem="@layout/item_subtask"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_m"
            android:orientation="horizontal"
            app:layout_goneMarginTop="@dimen/spacing_m"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvEventTitle"
            app:layout_constraintTop_toBottomOf="@+id/llSubtasksContainer"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvCategoryTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_tag_background_prymary"
                android:paddingHorizontal="@dimen/spacing_m"
                android:paddingVertical="@dimen/spacing_xxs"
                android:drawablePadding="@dimen/drawable_padding_tag"
                android:gravity="center_vertical"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_size_tag"
                android:fontFamily="@font/nunitobold"
                tools:text="@string/task_placeholder_tag_category"
                tools:drawableStart="@drawable/ic_work"/>

            <TextView
                android:id="@+id/tvPriorityTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_s"
                android:background="@drawable/shape_tag_background_hight"
                android:paddingHorizontal="@dimen/spacing_m"
                android:paddingVertical="@dimen/spacing_xxs"
                android:drawablePadding="@dimen/drawable_padding_tag"
                android:gravity="center_vertical"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_size_tag"
                android:fontFamily="@font/nunitobold"
                tools:text="@string/task_placeholder_tag_priority"
                tools:drawableStart="@drawable/ic_mark"/>
        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_celebration"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:translationZ="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/confetti" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>