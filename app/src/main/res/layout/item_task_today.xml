<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_task_root"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingVertical="16dp"
        android:paddingHorizontal="20dp">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/sw_task_completed"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvEventTitle"
            app:layout_constraintBottom_toBottomOf="@+id/tvEventTitle"/>

        <TextView
            android:id="@+id/tvEventTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#1F2937"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/nunitobold"
            tools:text="Reunión de equipo"
            app:layout_constraintEnd_toStartOf="@+id/btnTaskOptions"
            app:layout_constraintStart_toEndOf="@id/sw_task_completed"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnTaskOptions"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_more_vert"
            app:tint="#9CA3AF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvEventTitle"
            app:layout_constraintBottom_toBottomOf="@+id/tvEventTitle"/>

        <LinearLayout
            android:id="@+id/lyMetadatos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvEventTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvEventTitle">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/ivRepeat"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_time_restart"
                    app:tint="#A855F7" />
                <TextView
                    android:id="@+id/tvFrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="Semanal"
                    android:fontFamily="@font/nunito"
                    android:textColor="#A855F7"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/ivAlert"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_notifications"
                    app:tint="#F59E0B" />
                <TextView
                    android:id="@+id/tvAlertCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="1"
                    android:fontFamily="@font/nunito"
                    android:textColor="#F59E0B"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="#6B7280"
                android:textSize="12sp"
                android:fontFamily="@font/nunito"
                android:text="1h 30m" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Revisión de objetivos semanales"
            android:textColor="#6B7280"
            android:textSize="15sp"
            android:fontFamily="@font/nunito"
            android:lineSpacingExtra="2dp"
            app:layout_constraintStart_toStartOf="@+id/tvEventTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lyMetadatos"/>

        <ImageView
            android:id="@+id/icon_time"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_clock"
            app:tint="#9CA3AF"
            app:layout_constraintStart_toStartOf="@+id/tvEventTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

        <TextView
            android:id="@+id/tvEventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#4B5563"
            android:textSize="14sp"
            android:fontFamily="@font/nunitosemibold"
            app:layout_constraintBottom_toBottomOf="@+id/icon_time"
            app:layout_constraintStart_toEndOf="@+id/icon_time"
            app:layout_constraintTop_toTopOf="@+id/icon_time"
            tools:text="09:00" />

        <LinearLayout
            android:id="@+id/lySubtasksHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/icon_time"
            app:layout_constraintTop_toBottomOf="@+id/icon_time">

            <ImageView
                android:id="@+id/ivChevron"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:rotation="-90"
                android:src="@drawable/ic_arrow_back"
                app:tint="#4B5563" />

            <TextView
                android:id="@+id/textView_taskDetail_progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="#374151"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/nunitobold"
                tools:text="Subtareas (1/3)" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSubtasksContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:paddingStart="28dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/lySubtasksHeader"
            app:layout_constraintTop_toBottomOf="@+id/lySubtasksHeader">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSubtasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                tools:itemCount="3"
                tools:listitem="@layout/item_subtask"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvEventTitle"
            app:layout_constraintTop_toBottomOf="@+id/llSubtasksContainer">

            <TextView
                android:id="@+id/tvCategoryTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_tag_background_prymary"
                android:paddingHorizontal="14dp"
                android:paddingVertical="5dp"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:fontFamily="@font/nunitobold"
                android:text="General"
                tools:text="Reunión" />

            <TextView
                android:id="@+id/tvPriorityTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/shape_tag_background_hight"
                android:paddingHorizontal="14dp"
                android:paddingVertical="5dp"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:fontFamily="@font/nunitobold"
                android:text="Prioridad"
                tools:text="Alta" />
        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_celebration"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:translationZ="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/confetti" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>