<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">


    <!-- Contenido desplazable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/activity_horizontal_XL_margin"
           android:layout_marginStart="@dimen/activity_horizontal_XL_margin">

            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_XL_margin"
                android:text="Mes de Junio"
                android:textColor="@color/ivory"
                android:textSize="@dimen/txt_dimen_extra"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />


            <androidx.cardview.widget.CardView
                android:id="@+id/card_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/ivory"
                android:layout_marginTop="@dimen/activity_horizontal_XL_margin"
                app:cardCornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gastos"
                        android:textSize="@dimen/txt_dimen_xxl"
                        android:textColor="@color/background_primary"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:orientation="vertical">

                            <!-- Gastos fijos -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Gastos fijos 50 %"
                                android:textSize="@dimen/txt_dimen_xl"
                                android:textColor="@color/background_primary"
                                android:textStyle="bold"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:id="@+id/textSugerencia"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:textSize="@dimen/txt_dimen_xl"
                                android:maxLines="1"
                                android:text="Alquiler, Luz, Agua, Internet..."
                                android:textColor="@color/secondary_text"
                                tools:ignore="SpUsage" />


                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/barFijos"
                                style="@style/Widget.MaterialComponents.LinearProgressIndicator"
                                android:layout_width="match_parent"
                                android:layout_height="6dp"
                                app:indicatorColor="@color/amber"
                                app:showAnimationBehavior="inward"
                                app:trackColor="@color/amber_ligh"
                                app:showDelay="2"
                                android:progress="0"
                                android:progressTint="@color/amber"
                                android:indeterminateBehavior="cycle"
                                app:trackThickness="6dp" />


                            <!-- Ocio -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:textSize="@dimen/txt_dimen_xl"
                                android:text="Gastos Ocio 30 %"
                                android:textColor="@color/background_primary"
                                android:textStyle="bold"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:textSize="@dimen/txt_dimen_xl"
                                android:maxLines="1"
                                android:text="Gimnasio, Restaurante, Cine..."
                                android:textColor="@color/secondary_text"
                                tools:ignore="SpUsage" />

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/barOcio"
                                style="@style/Widget.MaterialComponents.LinearProgressIndicator"
                                android:layout_width="match_parent"
                                android:layout_height="6dp"
                                app:trackColor="@color/teal_ligh"
                                android:progress="0"
                                app:showAnimationBehavior="inward"
                                app:showDelay="2"
                                app:indicatorColor="@color/teal"
                                android:progressTint="@color/teal"
                                app:trackThickness="6dp" />

                            <!-- Generales -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:textSize="@dimen/txt_dimen_xl"
                                android:text="Gastos Generales 20 %"
                                android:textColor="@color/background_primary"
                                android:textStyle="bold"
                                tools:ignore="SpUsage" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:maxLines="1"
                                android:text="Inversion, Deuda y Ahorros "
                                android:textColor="@color/secondary_text"
                                android:textSize="@dimen/txt_dimen_xl"
                                tools:ignore="SpUsage" />

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/barGenerales"
                                style="@style/Widget.MaterialComponents.LinearProgressIndicator"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:showAnimationBehavior="inward"
                                app:showDelay="2"
                                android:progress="0"
                                app:trackColor="@color/trackGray"
                                android:progressTint="@color/navy"
                                app:indicatorColor="@color/navy"
                                app:trackThickness="6dp" />
                        </LinearLayout>
                        <!-- Gráfico de distribución -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/txt_dimen_xl"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.manuelbena.synkron.presentation.components.FinancePiePorcentel
                                android:id="@+id/financePie"
                                android:layout_width="100dp"
                                android:layout_height="100dp"/>

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/txt_dimen_xl"
                                android:textSize="@dimen/txt_dimen_xl"
                                tools:ignore="SpUsage"
                                android:text="Cuidado estas gastanto mucho este mes "
                                android:textColor="@color/secondary_text"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:src="@drawable/ic_sycrom_calculate" />

                        </LinearLayout>


                    </LinearLayout>
                    <TextView
                        android:id="@+id/addSuggestion"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="12dp"
                        android:layout_weight="0.6"
                        android:textSize="@dimen/txt_dimen_xl"
                        android:gravity="end"
                        android:text="@string/tvModificarPorcentajes"
                        android:textColor="@color/secondary_text"
                        android:textStyle="bold"
                        tools:ignore="SpUsage" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_expenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:backgroundTint="@color/ivory"
                android:layout_marginTop="@dimen/activity_horizontal_XL_margin"
                app:cardCornerRadius="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_send"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Historial De Gastos"
                            android:textSize="@dimen/txt_dimen_xxl"
                            android:textColor="@color/background_primary"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />
                        <TextView
                            android:id="@+id/look_expenses"
                            android:layout_width="0dp"
                            android:textSize="@dimen/txt_dimen_xl"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:gravity="end"
                            android:text="@string/tvHistoric"
                            android:textColor="@color/secondary_text"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />
                    </LinearLayout>

                    <!-- RecyclerView de gastos -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvExpenses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:clipToPadding="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="100dp"
        app:backgroundTint="@color/secondary_text"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/title_money"
        app:srcCompat="@drawable/ic_plus" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
