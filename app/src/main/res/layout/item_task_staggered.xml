<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/color_card"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/border"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/viewCategoryIndicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/shape_circle_category"
                android:backgroundTint="@color/color_primary"/>

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/nunitosemibold"
                android:textSize="10sp"
                android:textAllCaps="true"
                android:textColor="@color/secondary_text"
                tools:text="TRABAJO" />

            <ImageView
                android:id="@+id/ivPriority"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_mark"
                app:tint="@color/priority_high"
                android:visibility="gone"
                tools:visibility="visible"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunitobold"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="16sp"
            android:maxLines="3"
            android:ellipsize="end"
            tools:text="Revisar informe de Synkrón" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/nunito"
            android:textColor="@color/secondary_text"
            android:textSize="13sp"
            android:maxLines="5"
            android:ellipsize="end"
            android:visibility="visible"
            tools:text="Verificar los puntos pendientes de la reunión del lunes y enviar correo." />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/nunitolight"
            android:textColor="@color/secondary_text"
            android:textSize="11sp"
            android:drawablePadding="4dp"
            app:drawableStartCompat="@drawable/ic_calendar_today"
            app:drawableTint="@color/secondary_text"
            tools:text="12 Oct" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>