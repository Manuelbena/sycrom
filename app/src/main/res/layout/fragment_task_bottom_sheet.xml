<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_body">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header"
        android:paddingHorizontal="@dimen/spacing_large"
        android:paddingVertical="@dimen/spacing_medium"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunitobold"
            android:text="Nueva Tarea"
            android:textColor="@color/md_theme_onSurface"
            android:textSize="@dimen/text_h5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_close_wizard"
            android:layout_width="@dimen/icon_medium"
            android:layout_height="@dimen/icon_medium"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/md_theme_onSurface" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/progress_indicator_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_surface"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_xs"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/header_container">

        <View
            android:id="@+id/indicator_step_1"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginEnd="@dimen/spacing_small"
            android:layout_weight="1"
            android:background="@color/color_primary" />

        <View
            android:id="@+id/indicator_step_2"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_marginEnd="@dimen/spacing_small"
            android:layout_weight="1"
            android:background="@color/border" />

        <View
            android:id="@+id/indicator_step_3"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@color/border" />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_header"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dividerColor="@color/border"
        app:layout_constraintTop_toBottomOf="@id/progress_indicator_container" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/footer_buttons_layout"
        app:layout_constraintTop_toBottomOf="@id/divider_header">

        <ViewFlipper
            android:id="@+id/viewFlipperSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:fontFamily="@font/nunitobold"
                    android:text="Título *"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="@dimen/text_body" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_title"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/color_card"
                    app:boxStrokeColor="@color/color_primary"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tiet_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunitregular"
                        android:hint="Ej: Reunión con el equipo"
                        android:inputType="textCapSentences"
                        android:textColor="@color/md_theme_onSurface"
                        android:textSize="@dimen/text_body" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:fontFamily="@font/nunitobold"
                    android:text="Descripción"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="@dimen/text_body" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_description"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/color_card"
                    app:boxStrokeColor="@color/color_primary"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tiet_description"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:fontFamily="@font/nunitregular"
                        android:gravity="top|start"
                        android:hint="Añade una descripción..."
                        android:inputType="textMultiLine"
                        android:textColor="@color/md_theme_onSurface"
                        android:textSize="@dimen/text_body" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:fontFamily="@font/nunitobold"
                    android:text="Categoría"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="@dimen/text_body" />

                <include
                    android:id="@+id/layoutCategorySelect"
                    layout="@layout/item_category_row_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:fontFamily="@font/nunitobold"
                    android:text="Prioridad"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="@dimen/text_body" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_priority_high"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/color_card"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/border"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="@dimen/spacing_medium">

                            <ImageView
                                android:id="@+id/iv_priority_high"
                                android:layout_width="@dimen/icon_medium"
                                android:layout_height="@dimen/icon_medium"
                                android:src="@drawable/flag"
                                app:tint="#D32F2F" />

                            <TextView
                                android:id="@+id/tv_priority_high"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_tiny"
                                android:fontFamily="@font/nunitosemibold"
                                android:text="Alta"
                                android:textColor="#D32F2F"
                                android:textSize="@dimen/text_caption" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_priority_medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/spacing_tiny"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/color_card"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/border"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="@dimen/spacing_medium">

                            <ImageView
                                android:id="@+id/iv_priority_medium"
                                android:layout_width="@dimen/icon_medium"
                                android:layout_height="@dimen/icon_medium"
                                android:src="@drawable/flag"
                                app:tint="#FBC02D" />

                            <TextView
                                android:id="@+id/tv_priority_medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_tiny"
                                android:fontFamily="@font/nunitosemibold"
                                android:text="Media"
                                android:textColor="#FBC02D"
                                android:textSize="@dimen/text_caption" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_priority_low"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/color_card"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/border"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingVertical="@dimen/spacing_medium">

                            <ImageView
                                android:id="@+id/iv_priority_low"
                                android:layout_width="@dimen/icon_medium"
                                android:layout_height="@dimen/icon_medium"
                                android:src="@drawable/flag"
                                app:tint="@color/priority_low" />

                            <TextView
                                android:id="@+id/tv_priority_low"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_tiny"
                                android:fontFamily="@font/nunitosemibold"
                                android:text="Baja"
                                android:textColor="@color/priority_low"
                                android:textSize="@dimen/text_caption" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout_task_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:background="@android:color/transparent"
                    app:tabIconTint="@color/secondary_text"
                    app:tabIndicatorColor="@color/color_primary"
                    app:tabSelectedTextColor="@color/color_primary"
                    app:tabTextColor="@color/secondary_text">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@drawable/ic_clock"
                        android:text="@string/tab_schedule" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@drawable/ic_calendar_today"
                        android:text="@string/tab_all_day" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@drawable/ic_no_planifi"
                        android:text="@string/tab_no_date" />
                </com.google.android.material.tabs.TabLayout>

                <LinearLayout
                    android:id="@+id/container_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:fontFamily="@font/nunitobold"
                        android:text="Cuando"
                        android:textColor="@color/md_theme_onSurface"
                        android:textSize="@dimen/text_body" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFecha"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:fontFamily="@font/nunitregular"
                        android:gravity="center"
                        android:backgroundTint="@color/color_card"
                        android:text="Hoy"
                        android:textColor="@color/secondary_text"
                        app:icon="@drawable/ic_calendar_today"
                        app:iconTint="@color/secondary_text"
                        app:strokeColor="@color/border"
                        app:strokeWidth="1dp" />

                    <LinearLayout
                        android:id="@+id/container_datetime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnHoraStart"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/button_height"
                            android:layout_marginEnd="@dimen/spacing_tiny"
                            android:layout_weight="1"
                            android:backgroundTint="@color/color_card"
                            android:fontFamily="@font/nunitregular"
                            android:text="--:--"
                            android:textColor="@color/secondary_text"
                            app:icon="@drawable/ic_access_time"
                            app:iconTint="@color/secondary_text"
                            app:strokeColor="@color/border"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnHoraEnd"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/button_height"
                            android:layout_marginStart="@dimen/spacing_tiny"
                            android:layout_weight="1"
                            android:backgroundTint="@color/color_card"
                            android:fontFamily="@font/nunitregular"
                            android:text="--:--"
                            android:textColor="@color/secondary_text"
                            app:icon="@drawable/ic_access_time"
                            app:iconTint="@color/secondary_text"
                            app:strokeColor="@color/border"
                            app:strokeWidth="1dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:fontFamily="@font/nunitobold"
                    android:text="Ubicación"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="@dimen/text_body" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_location"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/color_card"
                    app:boxStrokeColor="@color/color_primary"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:startIconTint="@color/md_theme_onSurface"
                    app:hintEnabled="false"
                    app:startIconDrawable="@drawable/ic_location">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tiet_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunitregular"
                        android:hint="Añade una ubicación"
                        android:inputType="textCapWords"
                        android:textColor="@color/md_theme_onSurface" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:fontFamily="@font/nunitobold"
                    android:text="Subtareas"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="@dimen/text_body" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSubtareas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_subtask_new" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_sub_task"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:boxBackgroundColor="@color/color_card"
                        app:boxStrokeColor="@color/color_primary"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:hintEnabled="false">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tiet_sub_task"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunitregular"
                            android:hint="Nueva subtarea..."
                            android:imeOptions="actionDone"
                            android:textColor="@color/md_theme_onSurface" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddSubTask"
                        android:layout_width="@dimen/spacing_2xl"
                        android:layout_height="@dimen/spacing_2xl"
                        android:layout_marginStart="@dimen/spacing_small"
                        android:backgroundTint="@color/color_primary"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp"
                        app:iconTint="@color/white"
                        app:icon="@drawable/ic_add"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:fontFamily="@font/nunitobold"
                    android:text="Repetir"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="@dimen/text_body" />

                <LinearLayout
                    android:id="@+id/container_recurrence_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/btnRecurrenceSelector"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/color_card"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/border"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="@dimen/spacing_medium">

                            <TextView
                                android:id="@+id/tv_recurrence_status"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/nunitobold"
                                android:text="Sin repetir"
                                android:textColor="@color/md_theme_onSurface"
                                android:textSize="@dimen/text_body" />

                            <ImageView
                                android:layout_width="@dimen/icon_small"
                                android:layout_height="@dimen/icon_small"
                                android:src="@drawable/ic_habiut"
                                app:tint="@color/secondary_text" />
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_days"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:visibility="gone"
                        app:singleSelection="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_lun"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/color_card"
                            android:textColor="@color/chip_text_selector"
                            app:chipStrokeColor="@color/chip_border_selector"
                            app:chipStrokeWidth="1dp"
                            android:tag="1"
                            android:text="Lun"
                            app:chipCornerRadius="20dp" />
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_mar"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/color_card"
                            android:textColor="@color/chip_text_selector"
                            app:chipStrokeColor="@color/chip_border_selector"
                            app:chipStrokeWidth="1dp"
                            android:tag="2"
                            android:text="Mar"
                            app:chipCornerRadius="20dp" />
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_mie"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/color_card"
                            android:textColor="@color/chip_text_selector"
                            app:chipStrokeColor="@color/chip_border_selector"
                            app:chipStrokeWidth="1dp"
                            android:tag="3"
                            android:text="Mie"
                            app:chipCornerRadius="20dp" />
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_jue"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/color_card"
                            android:textColor="@color/chip_text_selector"
                            app:chipStrokeColor="@color/chip_border_selector"
                            app:chipStrokeWidth="1dp"
                            android:tag="4"
                            android:text="Jue"
                            app:chipCornerRadius="20dp" />
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_vie"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/color_card"
                            android:textColor="@color/chip_text_selector"
                            app:chipStrokeColor="@color/chip_border_selector"
                            app:chipStrokeWidth="1dp"
                            android:tag="5"
                            android:text="Vie"
                            app:chipCornerRadius="20dp" />
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_sab"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/color_card"
                            android:textColor="@color/chip_text_selector"
                            app:chipStrokeColor="@color/chip_border_selector"
                            app:chipStrokeWidth="1dp"
                            android:tag="6"
                            android:text="Sab"
                            app:chipCornerRadius="20dp" />
                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_dom"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/color_card"
                            android:textColor="@color/chip_text_selector"
                            app:chipStrokeColor="@color/chip_border_selector"
                            app:chipStrokeWidth="1dp"
                            android:tag="7"
                            android:text="Dom"
                            app:chipCornerRadius="20dp" />
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:fontFamily="@font/nunitobold"
                    android:text="Recordatorios"
                    android:textColor="@color/md_theme_onSurface"
                    android:textSize="@dimen/text_body" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvReminders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_reminder_row" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddReminder"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_tiny"
                    android:fontFamily="@font/nunitobold"
                    android:text="Añadir recordatorio"
                    android:textColor="@color/md_theme_onSurface"
                    app:icon="@drawable/ic_notifications"
                    app:iconTint="@color/md_theme_onSurface"
                    app:backgroundTint="@color/color_card"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_medium"
                    app:cardBackgroundColor="@color/color_card"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/border"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_medium">

                        <ImageView
                            android:layout_width="@dimen/icon_small"
                            android:layout_height="@dimen/icon_small"
                            android:src="@drawable/ic_mark_check"
                            app:tint="#D32F2F" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:layout_weight="1"
                            android:fontFamily="@font/nunitregular"
                            android:text="Fijar tarea"
                            android:textColor="@color/md_theme_onSurface"
                            android:textSize="@dimen/text_body" />

                        <CheckBox
                            android:id="@+id/cb_pin_task"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/secondary_text" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />
            </LinearLayout>
        </ViewFlipper>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footer_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_theme_surface"
        android:elevation="16dp"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_large"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelar"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginEnd="@dimen/spacing_small"
            android:layout_weight="1"
            android:fontFamily="@font/nunitobold"
            android:text="Atrás"
            android:textColor="@color/md_theme_onSurface"
            android:visibility="gone"
            app:backgroundTint="@color/border"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardar"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_weight="2"
            android:fontFamily="@font/nunitobold"
            android:text="Siguiente"
            android:textColor="@color/white"
            app:backgroundTint="@color/color_primary"
            app:cornerRadius="@dimen/spacing_large" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>