<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <View
        android:id="@+id/selectionBg"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/shape_tag_background"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/selectionBg"
        app:layout_constraintEnd_toEndOf="@id/selectionBg"
        app:layout_constraintStart_toStartOf="@id/selectionBg"
        app:layout_constraintTop_toTopOf="@id/selectionBg"
        tools:text="22" />

</androidx.constraintlayout.widget.ConstraintLayout>