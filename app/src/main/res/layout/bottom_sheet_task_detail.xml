<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_body">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/bottom_sheet_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/spacing_3xl">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_primary"
                android:paddingBottom="@dimen/spacing_m">

                <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                    android:id="@+id/dragHandle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tint="@color/white"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageButton
                    android:id="@+id/btnClose"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="@dimen/spacing_s"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_close"
                    app:tint="@color/white"
                    android:contentDescription="@string/cd_task_options"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dragHandle"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="@dimen/spacing_s"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dragHandle">

                    <ImageButton
                        android:id="@+id/btnEdit"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/cd_task_options"
                        android:src="@drawable/ic_edit"
                        app:tint="@color/white" />

                    <ImageButton
                        android:id="@+id/btnShare"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/cd_task_options"
                        android:src="@drawable/ic_share"
                        app:tint="@color/white" />

                    <ImageButton
                        android:id="@+id/btnDelete"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="@string/cd_task_options"
                        android:src="@drawable/ic_delete"
                        app:tint="@color/white" />

                    <ImageButton
                        android:id="@+id/btnPin"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_mark"
                        app:tint="@color/white"
                        android:contentDescription="@string/cd_task_options"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_m"
                android:layout_marginTop="@dimen/spacing_m"
                android:layout_marginBottom="@dimen/spacing_xs"
                app:cardBackgroundColor="@color/color_card"
                app:cardCornerRadius="@dimen/card_corner_radius_lg"
                app:cardElevation="@dimen/card_elevation_default"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="top">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/sw_task_completed"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:layout_marginEnd="@dimen/spacing_s"
                            app:useMaterialThemeColors="true"/>

                        <TextView
                            android:id="@+id/tvTaskTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Entrenamiento de Fuerza"
                            android:textSize="@dimen/text_size_h2"
                            android:textStyle="bold"
                            android:textColor="@color/md_theme_onSurface"
                            android:fontFamily="@font/nunitobold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/spacing_m"
                        android:layout_marginStart="40dp">

                        <TextView
                            android:id="@+id/tvDateFull"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Lun, 24 Oct • 16:00"
                            android:textColor="@color/md_theme_onSurface"
                            android:textSize="@dimen/text_size_base"
                            android:fontFamily="@font/nunitosemibold"
                            app:drawableStartCompat="@drawable/ic_calendar_today"
                            android:drawablePadding="@dimen/spacing_m"
                            app:drawableTint="@color/secondary_text"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/spacing_m"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvDurationText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="1h 30m"
                                android:textColor="@color/secondary_text"
                                android:textSize="@dimen/text_size_sm"
                                android:fontFamily="@font/nunito"
                                app:drawableStartCompat="@drawable/ic_timer_duration"
                                android:drawablePadding="@dimen/spacing_m"
                                app:drawableTint="@color/secondary_text"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layoutRecurrence"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/spacing_l"
                            android:visibility="gone"
                            tools:visibility="visible">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Repetición"
                                    android:textSize="@dimen/text_size_xs"
                                    android:textColor="@color/secondary_text"
                                    android:fontFamily="@font/nunito"/>

                                <TextView
                                    android:id="@+id/tvRecurrenceTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="Todas las semanas"
                                    android:textColor="@color/md_theme_onSurface"
                                    android:textSize="@dimen/text_size_sm"
                                    android:fontFamily="@font/nunitosemibold"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llDaysContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/spacing_s">

                                <TextView android:id="@+id/dayMon" style="@style/DayCircleStyle" android:text="L" />
                                <TextView android:id="@+id/dayTue" style="@style/DayCircleStyle" android:text="M" />
                                <TextView android:id="@+id/dayWed" style="@style/DayCircleStyle" android:text="X" />
                                <TextView android:id="@+id/dayThu" style="@style/DayCircleStyle" android:text="J" />
                                <TextView android:id="@+id/dayFri" style="@style/DayCircleStyle" android:text="V" />
                                <TextView android:id="@+id/daySat" style="@style/DayCircleStyle" android:text="S" />
                                <TextView android:id="@+id/daySun" style="@style/DayCircleStyle" android:text="D" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/spacing_l">

                            <TextView
                                android:id="@+id/chipCategory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Salud"
                                android:paddingHorizontal="@dimen/spacing_m"
                                android:paddingVertical="@dimen/spacing_xxs"
                                android:background="@drawable/shape_tag_background_prymary"
                                android:textSize="@dimen/text_size_tag"
                                android:fontFamily="@font/nunitobold"
                                android:textColor="@color/secondary_text"
                                android:gravity="center_vertical"
                                android:drawablePadding="@dimen/drawable_padding_tag"
                                tools:drawableStart="@drawable/ic_health"/>

                            <TextView
                                android:id="@+id/chipPriority"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_m"
                                tools:text="Media"
                                android:paddingHorizontal="@dimen/spacing_m"
                                android:paddingVertical="@dimen/spacing_xxs"
                                android:background="@drawable/shape_tag_background_medium"
                                android:textSize="@dimen/text_size_tag"
                                android:fontFamily="@font/nunitobold"
                                android:textColor="@color/secondary_text"
                                android:gravity="center_vertical"
                                android:drawablePadding="@dimen/drawable_padding_tag"
                                tools:drawableStart="@drawable/flag"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_m"
                android:layout_marginTop="@dimen/spacing_m"
                android:layout_marginBottom="@dimen/spacing_xs"
                app:cardBackgroundColor="@color/color_card"
                app:cardCornerRadius="@dimen/card_corner_radius_lg"
                app:cardElevation="@dimen/card_elevation_default"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:textSize="@dimen/text_size_base"
                        android:textColor="@color/secondary_text"
                        android:fontFamily="@font/nunito"
                        tools:text="Descripción detallada..."/>

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_m"
                        tools:text="Gimnasio Municipal"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/text_size_sm"
                        android:fontFamily="@font/nunito"
                        app:drawableStartCompat="@drawable/ic_location_on"
                        android:drawablePadding="@dimen/spacing_m"
                        app:drawableTint="@color/secondary_text"/>

                    <TextView
                        android:id="@+id/tvLink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_m"
                        tools:text="Enlace de reunión"
                        android:textColor="@color/color_primary"
                        android:textSize="@dimen/text_size_sm"
                        android:fontFamily="@font/nunito"
                        android:autoLink="web"
                        app:drawableStartCompat="@drawable/ic_other"
                        android:drawablePadding="@dimen/spacing_m"
                        app:drawableTint="@color/color_primary"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSubtasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_m"
                android:layout_marginTop="@dimen/spacing_m"
                android:layout_marginBottom="@dimen/spacing_xs"
                app:cardBackgroundColor="@color/color_card"
                app:cardCornerRadius="@dimen/card_corner_radius_lg"
                app:cardElevation="@dimen/card_elevation_default"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lista de verificación"
                        android:textSize="@dimen/text_size_h3"
                        android:fontFamily="@font/nunitobold"
                        android:textColor="@color/md_theme_onSurface"
                        android:layout_marginBottom="@dimen/spacing_s"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSubtasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/item_subtask"
                        tools:itemCount="3"
                        android:nestedScrollingEnabled="false"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_m"
                android:layout_marginTop="@dimen/spacing_m"
                android:layout_marginBottom="@dimen/spacing_m"
                app:cardBackgroundColor="@color/color_card"
                app:cardCornerRadius="@dimen/card_corner_radius_lg"
                app:cardElevation="@dimen/card_elevation_default"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_l">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avisos"
                        android:textSize="@dimen/text_size_h3"
                        android:fontFamily="@font/nunitobold"
                        android:textColor="@color/md_theme_onSurface"
                        android:layout_marginBottom="@dimen/spacing_s"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvReminders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/item_reminder_row"
                        tools:itemCount="2"
                        android:nestedScrollingEnabled="false"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>