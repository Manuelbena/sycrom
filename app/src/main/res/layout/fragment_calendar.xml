<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_body">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="100dp"
            android:paddingBottom="24dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardCalendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                app:cardBackgroundColor="@color/color_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutMonthHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:background="@color/color_card">

                        <ImageButton
                            android:id="@+id/btnPrevMonth"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_arrow_back"
                            app:tint="@color/md_theme_onSurface"
                            android:contentDescription="Mes anterior" />

                        <TextView
                            android:id="@+id/tvMonthTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="Diciembre 2025"
                            android:textAlignment="center"
                            android:fontFamily="@font/nunitoextrabold"
                            android:textSize="20sp"
                            android:textColor="@color/md_theme_onSurface" />

                        <ImageButton
                            android:id="@+id/btnNextMonth"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:rotation="180"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_arrow_back"
                            app:tint="@color/md_theme_onSurface"
                            android:contentDescription="Mes siguiente" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutWeekDaysLegend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingVertical="8dp"
                        android:background="@color/color_card">

                        <TextView style="@style/CalendarWeekDayLegend" android:layout_width="0dp" android:layout_weight="1" android:gravity="center" android:text="LUN" />
                        <TextView style="@style/CalendarWeekDayLegend" android:layout_width="0dp" android:layout_weight="1" android:gravity="center" android:text="MAR" />
                        <TextView style="@style/CalendarWeekDayLegend" android:layout_width="0dp" android:layout_weight="1" android:gravity="center" android:text="MIE" />
                        <TextView style="@style/CalendarWeekDayLegend" android:layout_width="0dp" android:layout_weight="1" android:gravity="center" android:text="JUE" />
                        <TextView style="@style/CalendarWeekDayLegend" android:layout_width="0dp" android:layout_weight="1" android:gravity="center" android:text="VIE" />
                        <TextView style="@style/CalendarWeekDayLegend" android:layout_width="0dp" android:layout_weight="1" android:gravity="center" android:text="SAB" />
                        <TextView style="@style/CalendarWeekDayLegend" android:layout_width="0dp" android:layout_weight="1" android:gravity="center" android:text="DOM" />
                    </LinearLayout>

                    <com.kizitonwose.calendar.view.CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cv_dayViewResource="@layout/item_calendar_month_day"
                        app:cv_orientation="horizontal"
                        app:cv_scrollPaged="true"
                        app:cv_outDateStyle="endOfGrid" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvSelectedDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="Tareas del dÃ­a"
                app:layout_constraintTop_toBottomOf="@+id/cardCalendar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/nunitoextrabold"
                android:textSize="20sp"
                android:textColor="@color/md_theme_onSurface" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCalendarTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/tvSelectedDateTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layoutAnimation="@anim/layout_animation_fall_down"
                tools:listitem="@layout/item_calendar_task" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>