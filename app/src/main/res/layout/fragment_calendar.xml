<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layoutMonthHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#F9F9F9"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnPrevMonth"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/black"
            android:contentDescription="Mes anterior" />

        <TextView
            android:id="@+id/tvMonthTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Diciembre 2025"
            android:textAlignment="center"
            android:fontFamily="@font/nunitoextrabold"
            android:textSize="20sp"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/btnNextMonth"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:rotation="180"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/black"
            android:contentDescription="Mes siguiente" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutWeekDaysLegend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:background="#F9F9F9"
        app:layout_constraintTop_toBottomOf="@id/layoutMonthHeader">

        <TextView style="@style/CalendarWeekDayLegend"
            android:layout_width="0dp" android:layout_weight="1" android:gravity="center" android:text="LUN" />
        <TextView style="@style/CalendarWeekDayLegend"
            android:layout_width="0dp" android:layout_weight="1" android:gravity="center" android:text="MAR" />
        <TextView style="@style/CalendarWeekDayLegend"
            android:layout_width="0dp" android:layout_weight="1" android:gravity="center" android:text="MIE" />
        <TextView style="@style/CalendarWeekDayLegend"
            android:layout_width="0dp" android:layout_weight="1" android:gravity="center" android:text="JUE" />
        <TextView style="@style/CalendarWeekDayLegend"
            android:layout_width="0dp" android:layout_weight="1" android:gravity="center" android:text="VIE" />
        <TextView style="@style/CalendarWeekDayLegend"
            android:layout_width="0dp" android:layout_weight="1" android:gravity="center" android:text="SAB" />
        <TextView style="@style/CalendarWeekDayLegend"
            android:layout_width="0dp" android:layout_weight="1" android:gravity="center" android:text="DOM" />
    </LinearLayout>

    <com.kizitonwose.calendar.view.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cv_dayViewResource="@layout/item_calendar_month_day"
        app:cv_orientation="horizontal"
        app:cv_scrollPaged="true"
        app:cv_outDateStyle="endOfGrid"
        tools:listitem="@layout/item_calendar_month_day"
        app:layout_constraintTop_toBottomOf="@id/layoutWeekDaysLegend"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>