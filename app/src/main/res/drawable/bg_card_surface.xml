<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />

            <gradient
                android:angle="45"
                android:endColor="?attr/colorSecondaryContainer"
                android:startColor="?attr/colorOnSurfaceVariant"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">

        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
        </shape>
    </item>

</layer-list>